                    @Html.EditorFor(model => model.CentroCosto, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.CentroCosto, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="row">

