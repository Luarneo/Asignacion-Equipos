@model FrontAsignacionActivoFijo.Models.AsignacionEmpleadoViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        @*<h4>Asignar Activo</h4>*@

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="row">

                <div class="form-group col-md-2">
                    @Html.Label("Serie", htmlAttributes: new { @class = "control-label" })

                    @Html.Editor("SerieActivo", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
                </div>

                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.FechaAsignacion, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.FechaAsignacion, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                    @Html.ValidationMessageFor(model => model.FechaAsignacion, "", new { @class = "text-danger", @id = "ValidFecha"  })

                </div>

                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.IdEstatus, htmlAttributes: new { @class = "control-label" })

                    @Html.DropDownListFor(model => model.IdEstatus, new SelectList(ViewBag.ListaEstatus, "Id", "Nombre"), "Selecciona una opción", new { @class = "form-control col-md-2" })
                    @Html.ValidationMessageFor(model => model.IdEstatus, "", new { @class = "text-danger", @id = "ValidEstatus"  })

                </div>

                <div class="form-group col-md-2 invisible">


                    @Html.EditorFor(model => model.IdActivo, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.IdDelActivo } })


                </div>

            </div>

            <div class="row">
                <div class="form-group col-md-2">

                    @Html.HiddenFor(model => model.NumEmpleadoA, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="row">

                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.NumEmpleadoE, new { htmlAttributes = new { @class = "control-label" } })


                    @Html.EditorFor(model => model.NumEmpleadoE, new { htmlAttributes = new { @class = "form-control" } })
