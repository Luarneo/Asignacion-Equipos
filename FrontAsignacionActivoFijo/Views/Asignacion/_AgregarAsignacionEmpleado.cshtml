                    @Html.EditorFor(model => model.ActualizacionEmpleado, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group col-md-1 invisible">
                    @Html.Editor("ArticuloS", new { htmlAttributes = new { @class = "form-control col-md-2" } })
                </div>
