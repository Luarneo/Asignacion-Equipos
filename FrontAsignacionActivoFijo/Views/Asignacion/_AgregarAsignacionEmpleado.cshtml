                        <span class="glyphicon glyphicon-search"></span>
                    </span>


                    @Html.ValidationMessageFor(model => model.NumEmpleadoE, "", new { @class = "text-danger" })

                </div>


                <div class="form-group col-md-2">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger", @id = "ValidColaborador"  })

