@model IEnumerable<FrontAsignacionActivoFijo.Models.ActivoViewModel>

@{
    ViewBag.Title = "Asignacion";
}




<h2 style=" text-align: center">Asignar Activo</h2>
<div class="row"><label>&nbsp; </label></div>

<div class="row">

    <div class="form-group col-md-3">
        @Html.Label("Empresa", htmlAttributes: new { @class = "control-label" })

        @Html.DropDownList("SelectEmpresa", new SelectList(ViewBag.ListaEmpresas, "Id", "Nombre"), "Selecciona una opción", new { @class = "form-control" })

    </div>

    <div class="form-group col-md-3">
        @Html.Label("Ubicación", htmlAttributes: new { @class = "control-label" })

        @Html.DropDownList("SelectUbicacion", new SelectList(ViewBag.ListaUbicaciones, "Id", "Nombre"), "Selecciona una opción", new { @class = "form-control" })

    </div>



</div>

<div class="row"><label>&nbsp; </label></div>
<h2>Activos</h2>
<div class="row"><label>&nbsp; </label></div>
<table class="table" id="TablaActivos">
    <thead>
        <tr>


            <th >
                N° Serie
            </th>
            <th>
                Clasificación
            </th>
            <th>
                Artículo
            </th>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                Procesador
            </th>
            <th>
                HDD
            </th>
            <th>
                RAM/Telefono
            </th>
            <th style="width:12%">
                Actualizar Activo
            </th>
            <th style="width:15%">
                Descargar Responsiva
            </th>

        </tr>
    </thead>

    <tbody>

        


    </tbody>


</table>

<div class="modal" tabindex="-1" role="dialog" id="ModalAsignarActivo" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Asignar Activo</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="ContenidoAsignarActivo">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  

    <script src="~/Scripts/JSAsignacion.js"></script>

}
