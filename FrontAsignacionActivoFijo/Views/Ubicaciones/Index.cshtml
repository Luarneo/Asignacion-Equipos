@model IEnumerable<FrontAsignacionActivoFijo.Models.UbicacionesViewModel>

@{
    ViewBag.Title = "Ubicaciones";
}

<h2 style="text-align: center">Ubicaciones</h2>

<html>

<head>


</head>

<body>



    <div class="row"><label>&nbsp; </label></div>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <button type="button" class="btn btn-info" id="NvaUbic">
            <i class="glyphicon glyphicon-plus"></i> Nueva Ubicación
        </button>
    </p>
    <div class="row"><label>&nbsp; </label></div>


    <table class="table" id="TablaUbicaciones">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreEstado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreMunicipio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    Activar / Desactivar
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreMunicipio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>

                    <td>
                        @Html.CheckBoxFor(modelItem => item.Estatus, new { @class = "claseestatus", data_toggle = "toggle", data_onstyle = "success", data_on = "Activo", data_off = "Inactivo", dataid = @item.Id })
                        @*@Html.CheckBoxFor(modelItem => item.Estatus, new { @class = "claseestatus", dataid = @item.Id})*@
                    </td>

                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" tabindex="-1" role="dialog" id="NuevaUbicacion" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Nueva Ubicación</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="contenidoNuevaUbicacion">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>


</body>
</html>





@section Scripts {
