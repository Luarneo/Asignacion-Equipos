@model IEnumerable<FrontAsignacionActivoFijo.Models.ComponentesViewModel>

@{
    ViewBag.Title = "Ver Componentes";
}

   
<h2 style="text-align:center">Ver Componentes</h2>
<div class="row"><label>&nbsp; </label></div>

<div class="row">
    <div class="form-group col-md-3">
        @Html.Label("N° Serie / IMEI", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("SerieEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("Marca", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("MarcaEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("Modelo", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("ModeloEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("Procesador / SIM", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("ProcesadorEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>


</div>

<div class="row">

    <div class="form-group col-md-3">
        @Html.Label("Disco duro / Plan", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("DiscoEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("RAM / Linea", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("RamEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("Asignado", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("AsignadoEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

    <div class="form-group col-md-3">
        @Html.Label("Articulo", htmlAttributes: new { @class = "control-label" })

        @Html.Editor("ArticuloEnc", new { htmlAttributes = new { @class = "form-control col-md-2", @disabled = "disabled" } })
    </div>

</div>

<div class="row"><label>&nbsp; </label></div>
<div class="row"><label>&nbsp; </label></div>
<div class="row">
    <div class="col-md-2"><label>&nbsp; </label></div>

    <div class="col-md-8">

        <table class="table" id="TablaComponentesAgregados">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Serie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modelo)
                    </th>
                </tr>



            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Serie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>

                    </tr>
                }

            </tbody>


        </table>


    </div>

    <div class="col-md-2"><label>&nbsp; </label></div>
</div>

<div class="row"><label>&nbsp; </label></div>
<div class="row">
    <div class="col-md-12 pull-right">
        @*<input type="button" value="Regresar" class="btn btn-danger" onclick=" />*@
        @Html.ActionLink("Regresar", "Index", "Componentes", new { @class = "btn btn-danger" })
    </div>
</div>


@section Scripts {

    <script src="~/Scripts/JSComponentes.js"></script>

}